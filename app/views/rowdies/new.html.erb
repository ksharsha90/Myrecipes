<%= render 'shared/page_title', title: "Sign up and get ready" %>

<%= render 'shared/errors', obj: @rowdie %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@rowdie, :html => {class: "form-horizantal", role: "form"}) do |f| %>
    <div class="form-group row ">
      <div class="col-form-label col-md-2">
        <%= f.label :rowdyname, "Choose a name" %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :rowdyname, class: "form-control", placeholder: "Enter Rowdy Name" , autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-form-label col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email Rowdy!" %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-form-label col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Choose your password" %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-form-label col-md-2">
        <%= f.label :password_confirmation, "Confirm password" %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "confirm password" %>
      </div>
    </div>
    
    
    <div class="form-group">
      <div class="offset-md-2 col-md-10">
        <%= f.submit "Create my account", class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>
    <% end %>
    <div class="col-md-4 offset-md-4 colormatch">
      [ <%= link_to "cancel and go back to teams listing", teams_path %> ]
    </div>
  </div>
</div>



