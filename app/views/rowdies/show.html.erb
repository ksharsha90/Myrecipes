<%= render 'shared/page_title', title: "Rowdie #{@rowdie.rowdyname}'s profile" %>

<div class="row">
  <div class="col-md-4 offset-md-4 center">
    <%= gravatar_for @rowdie, size: 150%>
  </div> 
</div>
<% if @rowdie.teams.count != 0 %>

<h4 align="center"><%= @rowdie.rowdyname %>'s teams</h4>
 <%= will_paginate @rowdie_teams, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-end)  %>
<%= render 'teams/team', obj: @rowdie_teams %>
  <%= will_paginate @rowdie_teams, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-end)  %>
  <% else %>
  
  <h4 align="center">No teams yet</h4>
  <% end %>