<%= render 'shared/page_title', title: "choose a new team" %>
<% if @team.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card bg-danger">
          <div class="card-heading">
          <h2 class="card-title">
            <%= pluralize(@team.errors.count, "error") %>
                          prohibited this <%= @team.class %> from being saved: 
          </h2>
          <div class="card-body">
             <ul>
                <%= @team.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
          </div>
        </div> 
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@team, :html => {class: "form-horizantal", role: "form"}) do |f| %>
    <div class="form-group row ">
      <div class="col-form-label col-md-2">
        <%= f.label :name %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Name of the team" , autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-form-label col-md-2">
        <%= f.label :description %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Tell about your favorite team.Mesmerize us" %>
      </div>
    </div>
    <div class="form-group">
      <div class="offset-md-2 col-md-10">
        <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>
    <% end %>
    <div class="col-md-4 offset-md-4 colormatch">
      [ <%= link_to "cancel and go back to teams listing", teams_path %> ]
    </div>
  </div>
</div>



